<!DOCTYPE html>
<html lang="en">

<head>
  <!-- // Remove the stuff below if it is later included in _header above -->
  <title>View Cart</title>
  <% include ./partials/_head %>
  <script type="text/javascript" src="/scripts/create_cart.js"></script>
  <script type="text/javascript" src="/scripts/get_total.js"></script>
  <script type="text/javascript" src="/scripts/order.js"></script>
</head>

<header>
  <% include ./partials/_header %>
</header>

<body>
  <section class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="text-center">Your Cart</h3>
        </div>
        <div class="panel-body">
          <p class="text-center">Please review your cart before checking out!</p>
        </div>
          <table class="table table-striped cart-items">
            <tr>
              <th>Item</th>
              <th class="text-right">Qty</th>
              <th class="text-right">Price</th>
            </tr>
            <!-- new cart items added here --> 
          </table>
          <table class="table price" style="width:40%; margin-left: auto;">
            <tr>
              <td></td>
            </tr>
            <!-- price goes here -->
          </table>
      </div>
    </div>
    <div class="row">
        <button id="test" type="button" class="btn btn-danger pull-right">Clear Cart</button>
      <form action="/cart/place_order" method="POST" >  
        <input name="name" placeholder="Name" type="text">
        <input name="phone" placeholder="Phone Number" type="text">
        <button type="submit" class="btn btn-success pull-right">Checkout</button>
      </form>  
    </div>
  </section>
</body>

</html>
