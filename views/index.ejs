  @media (min-width: 1100px) {
      .menu-row {
        width: 120%;
        position: relative;
        left: -100px;
      }
  }
  .footer {
  background-color:black;
  height: 100px;
  z-index: 5;
  position: relative;
  }
  .footer-text {
    color: white;
    font-size: 2.0em;
    position: relative;
    right: 8%;
    top: 2%;
  }
</style>

</head>

<body>
  <header>
    <% include partials/_header %>
  </header>  

  <div class="banner">
    <div class="hero-img"></div>
  </div>

  <section id="menu"></section>  

  <section class="container-fluid menu-page">
    <div class="row">
      <div class="col-md-12 text-center">
        <h1 class="menu-title">Our Menu</h1>
      </div>
    </div>
    <div class="menu-items">
      <!-- Menu items get appended here-->
    </div>
  </section>

  <footer>
    <% include ./partials/_footer %>
  </footer>

</body>

</html>
